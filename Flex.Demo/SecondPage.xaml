<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns:flex="clr-namespace:Flex.Controls;assembly=Flex" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Flex.Demo.SecondPage">

    <StackLayout Margin="20, 50">
        
        <flex:FlexButton
            x:Name="button1"
            HeightRequest="40"
            CornerRadius="20"
            Text="Pill Button 1"
            FontSize="Small"
            VerticalOptions="Start"
            ForegroundColor="#ffffff"
            HighlightForegroundColor="#49516F"
            BackgroundColor="#6279B8"
            HighlightBackgroundColor="#8EA4D2"
            Clicked="button1_OnClicked"/>
        
        
        <flex:FlexButton
            x:Name="button2"
            HeightRequest="40"
            CornerRadius="20"
            Text="Pill Button 2"
            FontSize="Small"
            VerticalOptions="Start"
            ForegroundColor="#ffffff"
            HighlightForegroundColor="#49516F"
            BackgroundColor="#6279B8"
            HighlightBackgroundColor="#8EA4D2"
            Clicked="button2_OnClicked"/>
    
    </StackLayout>    
</ContentPage>
